<div class="container">
  <div class="row justify-content-center">
    <div class="new-form">
      <form action="/restaurants/{{ restaurant._id }}/edit" method="POST">
        <div class="form-row justify-content-center">
          <div class="form-group col-md-8">
            <label for="name">名稱</label>
            <input type="text" class="form-control" id="name" name="name" value="{{ restaurant.name }}">
          </div>
          <div class="form-group col-md-4">
            <label for="category">類型</label>
            <select id="category" class="form-control" name="category">
              <option check>{{restaurant.category}}</option>
              <option>中式</option>
              <option>日式</option>
              <option>韓式</option>
              <option>義式</option>
              <option>美式</option>
              <option>法式</option>
              <option>泰式</option>
              <option>中東</option>
              <option>異國</option>
              <option>咖啡</option>
              <option>酒吧</option>
            </select>
          </div>
          <div class="form-group col-md-8">
            <label for="phone">電話</label>
            <input type="text" class="form-control" id="phone" name="phone" value="{{ restaurant.phone }}">
          </div>
          <div class="form-group col-md-4">
            <label for="rating">評分</label>
            <input type="text" class="form-control" id="rating" name="rating" value="{{ restaurant.rating }}">
          </div>
          <div class="form-group col-12">
            <label for="address">地址</label>
            <input type="text" class="form-control" id="address" name="location" value="{{ restaurant.location }}">
          </div>
          <div class="form-group col-12">
            <label for="google_map">Google Map</label>
            <input type="text" class="form-control" id="google_map" name="google_map"
              value="{{ restaurant.google_map }}">
          </div>
          <div class="form-group col-12">
            <label for="image">照片</label>
            <input type="text" class="form-control" id="image" name="image" value="{{ restaurant.image }}">
          </div>
          <div class="form-group col-md-12">
            <label for="description">描述</label>
            <textarea type="text" class="form-control form-description" id="description"
              name="description">{{ restaurant.description }}</textarea>
          </div>
          <div class="form-group col-md-12 d-flex justify-content-end" style="margin-top: 10px">
            <button type="submit" class="btn btn-warning font-weight-bold">儲存</button>
            <a href="/">
              <button type="button" class="btn btn-dark ml-3 font-weight-bold">首頁</button>
            </a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>