<h1 class="restaurant-show-title text-warning">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto" style="color:	#FFF8D7;">
      <div class="d-flex align-items-center justify-content-end">
        <button class="btn" data-toggle="tooltip" data-placement="top" title="首頁">
          <a href="/" style="text-decoration:none; color:#FFF8D7"><i class="fas fa-home"></i>
          </a>
        </button>
        <button class="btn" data-toggle="tooltip" data-placement="top" title="編輯">
          <a href="/restaurants/{{restaurant._id}}/edit" style="text-decoration:none; color:#FFF8D7"><i
              class="fas fa-edit"></i>
          </a>
        </button>
        <button type="btn" class="btn" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo"
          data-placement="top" title="刪除" style="color:#FFF8D7"><i class="fas fa-trash-alt"></i></button>

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                    aria-hidden="true">×</span></button>
              </div>
              <div class="modal-body">
                <form>
                  <div class="form-group">
                    <label for="message-text" class="control-label"
                      style="color:#000000">確定要刪除{{restaurant.name}}餐廳資訊？</label>
                  </div>
                </form>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">返回</button>
                <form action="/restaurants/{{restaurant._id}}?_method=DELETE" method="POST" style="display: inline">
                  <button type="submit" class="btn btn-danger">刪除</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

      <p class="mb-1">
        <span class="text-warning">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>
      <p class="mb-1">
        <span class="text-warning">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-warning" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>
      <p class="mb-1">
        <span class="text-warning">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>
      <p class="mb-5">
        {{restaurant.description}}
      </p>
      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>