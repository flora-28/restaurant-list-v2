<div class="container">
  <div class="row justify-content-center">
    <div class="new-form">
      <form action="/restaurants" method="POST">
        <div class="form-row justify-content-center">
          <div class="form-group col-md-8">
            <label for="name">名稱</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="餐廳名稱" required>
          </div>
          <div class="form-group col-md-4">
            <label for="category">類型</label>
            <select id="category" class="form-control" name="category">
              <option>請選擇餐廳類型</option>
              <option>中式</option>
              <option>日式</option>
              <option>韓式</option>
              <option>義式</option>
              <option>美式</option>
              <option>法式</option>
              <option>泰式</option>
              <option>中東</option>
              <option>異國</option>
              <option>咖啡</option>
              <option>酒吧</option>
            </select>
          </div>
          <div class="form-group col-md-8">
            <label for="phone">電話</label>
            <input type="text" class="form-control" id="phone" name="phone" placeholder="餐廳電話" required>
          </div>
          <div class="form-group col-md-4">
            <label for="rating">評分</label>
            <input type="number" step="0.1" class="form-control" id="rating" name="rating" placeholder="0.0 ~ 5.0"
              required>
          </div>
          <div class="form-group col-12">
            <label for="address">地址</label>
            <input type="text" class="form-control" id="address" name="location" placeholder="餐廳地址" required>
          </div>
          <div class="form-group col-12">
            <label for="google_map">Google Map</label>
            <input type="text" class="form-control" id="google_map" name="google_map" placeholder="http://" required>
          </div>
          <div class="form-group col-12">
            <label for="image">照片</label>
            <input type="text" class="form-control" id="image" name="image" placeholder="http://" required>
          </div>
          <div class="form-group col-md-12">
            <label for="description">描述</label>
            <textarea type="text" class="form-control form-description" id="description" name="description"
              placeholder="餐點特色、價格、推薦品項..." required></textarea>
          </div>
          <div class="form-group col-md-12 d-flex justify-content-end" style="margin-top: 10px">
            <button type="submit" class="btn btn-warning font-weight-bold">新增</button>
            <a href="/">
              <button type="button" class="btn btn-dark ml-3 font-weight-bold">首頁</button>
            </a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>